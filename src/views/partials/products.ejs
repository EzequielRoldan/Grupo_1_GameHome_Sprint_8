<h3 class="titulo-ofertas">¡Todos nuestros productos!</h3>
<section class="que-estas-buscando">

    <% for(let i=0;i<products.length;i++){ %>
        <% if (products.length<1) { %>
            <br><br><br><br><br>
            <h2>¡Ups! No se encontraron productos!</h2>
        <% } else {%>

     <article>
        
        <img src="/images/<%= products[i].image%>" alt="imagen del producto">

        <div class="nombre-precio-mas">

        <p class="nombre"><%= products[i].name%></p>
        <p class="precio"><%= products[i].price%></p>
        <a class="ver-mas" href="/products/<%=products[i].id%>">Ver más</a>
    </div>

    </article>
    <% } %> 
    <% } %>
    

</section>